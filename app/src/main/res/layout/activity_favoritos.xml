<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FavoritosActivity">

    <include
        android:id="@+id/miActionBarFavoritos"
        layout="@layout/actionbar_favoritos"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMascotasFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/top_cardview"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/miActionBarFavoritos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>